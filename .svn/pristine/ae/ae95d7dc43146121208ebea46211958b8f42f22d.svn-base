.login{
	height:100%;
	width:100%;
	background:url('./images/bg.jpg') no-repeat;
	background-size:100% 100%;
	display:flex;
	justify-content:center;
	align-items:center;
	.header{
		position:absolute;
		top:0;
		left:0;
		height:200px;
		width:100%;
		line-height:240px;
		font-size:30px;
		text-align:center;
		color:#fff;
		font-weight:600;
	}
	.loginBox{
		width:300px;
		border:1px solid #2eacc6;
		background:rgba(46,172,198,0.5);
		padding:30px 20px;
		.nameBox{
			height:50px;
			padding:0 10px;
			.lable{
				float:left;
				height:30px;
				line-height:30px;
				width:30%;
				color:#fff;
			}
			.userName{
				float:left;
				height:30px;
				line-height:30px;
				width:65%;
				color:#000;
				background:#fff;
				outline:none;
				border:none;
			}
		}
		.passwordBox{
			height:50px;
			padding:0 10px;
			.lable{
				float:left;
				height:30px;
				line-height:30px;
				width:30%;
				color:#fff;
			}
			.password{
				float:left;
				height:30px;
				line-height:30px;
				width:65%;
				color:#000;
				background:#fff;
				outline:none;
				border:none;
			}
		}
		.btn{
			height:50px;
			padding:0 10px;
			.submit{
				float:left;
				width:100%;
				height:30px;
				line-height:30px;
				border-radius:5px;
				text-align:center;
				background:#2eacc6;
				color:#fff;
				cursor:pointer;
			}
		}
	}
}